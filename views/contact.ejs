<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>About Us - Online Bookstore</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .company-overview {
      background-color: #f8f9fa;
      padding: 30px;
      border-radius: 8px;
    }
    .news-updates {
      background-color: #e9ecef;
      padding: 30px;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <!-- Include Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Online Bookstore</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact Us</a></li>
          <li class="nav-item"><a class="nav-link" href="/categories">Book Categories</a></li>
         
        </ul>
      </div>
    </div>
  </nav>
  
  <main>
    <div class="container-fluid row align-items-center my-5" id="contact-form">
      <div class="col-lg-3"></div>
      <div class="col-lg">
        <form class="text-center py-4" action="/contact" method="POST">
          <h2> Contact Us</h2>
          <div class="container">
            <!-- name -->
            <div class="row m-2">
              <div class="col-lg-2">
                <label for="name">Name:</label>
              </div>
              <div class="col-lg">
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="col-lg-2"></div>
            </div>
            <!-- email -->
            <div class="row m-2">
              <div class="col-lg-2">
                <label for="email">Email:</label>
              </div>
              <div class="col-lg">
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="col-md-2"></div>
            </div>
            <!-- subject -->
            <div class="row m-2">
              <div class="col-lg-2">
                <label for="subject">Subject:</label>
              </div>
              <div class="col-lg">
                <input type="text" class="form-control" id="subject" name="subject" required>
              </div>
              <div class="col-lg-2"></div>
            </div>
            <!-- message -->
            <div class="row m-2">
              <div class="col-lg-2">
                <label for="message">Message:</label>
              </div>
              <div class="col-lg">
                <textarea name="message" id="message" rows="10" class="form-control" required></textarea>
              </div>
              <div class="col-lg-2"></div>
            </div>
          </div>
          <div class="row m-2 align-items-start">
            <div class="col-md-2"></div>
            <div class="col-md m-2">
              <button id="btnSubmit" style="width: 100%;" class="btn btn-primary">Send Inquiry</button>
            </div>
            <div class="col-md m-2">
              <button id="btnReset" style="width: 100%;" class="btn btn-danger">Reset</button>
            </div>
            <div class="col-md-2"></div>
          </div>
        </form>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </main>
  <script src="/public_html/resources/scripts/contact.js"></script>
<%- include('footer'); -%>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>