<%- include('header'); -%>
<%- include('navbar.ejs', { username }) %>

<style>
  body, html {
    height: 100%;
    margin: 0;
    font-family: Arial, sans-serif;
  }

  .header {
    position: relative;
    background: url('images/banner.jpg') no-repeat center center;
    background-size: cover;
    width: 100vw;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    padding: 20px;
  }

  .header-overlay {
    background: #0d6efd; /* Dark overlay for better readability */
    padding: 50px;
    border-radius: 10px;
  }

  .header h1 {
    font-size: 50px;
    margin-bottom: 10px;
  }

  .header p {
    font-size: 20px;
    font-weight: 300;
  }

  .browse-btn {
    margin-top: 20px;
    background-color: #fff;
    color: #4CAF50;
    font-size: 18px;
    font-weight: bold;
    padding: 12px 25px;
    border: 2px solid #4CAF50;
    border-radius: 5px;
    text-decoration: none;
    display: inline-block;
    transition: 0.3s;
  }

  .browse-btn:hover {
    background-color: #4CAF50;
    color: white;
  }

  .content {
    padding: 50px;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .card {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 10px;
    width: 300px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }

  .card img {
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .card-body {
    padding: 20px;
  }

  .card-title {
    font-size: 24px;
    margin-bottom: 15px;
  }

  .card-text {
    font-size: 16px;
    color: #555;
  }

  .footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 10px;
    position: fixed;
    width: 100%;
    bottom: 0;
  }

  .toast {
    position: fixed;
    top: 0;
    align-items: center;
    width: 500px;
    z-index: 10000;
    padding: 0.5rem;
  }
</style>

<!-- Main Banner -->
<div class="header">
  <div class="header-overlay">
    <h1>Welcome to Our online Bookstore</h1>
    <p>Your one-stop shop for books..!</p>
    <a href="/books" class="browse-btn">ðŸ“š Browse Books</a>
  </div>
</div>

<!-- Toast Notification -->
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="true" data-delay="3000">
  <div class="toast-header bg-success text-white">
    <strong class="me-auto">Success</strong>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    Login successful!
  </div>
</div>

<h5 class="text-center mt-4"> Latest News and Events</h5>
<br>
<div class="container">
  <div class="row justify-content-center">
    
    <!-- Book Card 1 -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="images/1.jpg" class="card-img-top" alt="Book 1">
        <div class="card-body text-center">
          <h5 class="card-title">Garfield: The Fat Cat 3-Pack</h5>
          <p class="card-text">See author Jim Davis' classic collection of hilarious Garfield comics! Meet Jim Davis in person at our bookstore event.</p>
          <!-- <a href="#" class="btn btn-primary">View More</a> -->
        </div>
      </div>
    </div>

    <!-- Book Card 2 -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="images/2.jpg" class="card-img-top" alt="Book 2">
        <div class="card-body text-center">
          <h5 class="card-title">Tintin in Tibet</h5>
          <p class="card-text">Embark on an adventure with Tintin and Snowy as they travel to Tibet. A thrilling journey awaits!</p>
          <p class="card-text"><b>Available at the bookstore.</b></p>
          <!-- <a href="#" class="btn btn-primary">View More</a> -->
        </div>
      </div>
    </div>

    <!-- Book Card 3 -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="images/4.jpg" class="card-img-top" alt="Book 3">
        <div class="card-body text-center">
          <h5 class="card-title">The Complete Peanuts Vol. 1</h5>
          <p class="card-text">Enjoy the timeless charm of Charles M. Schulz's Peanuts strips. Meet the legacy of Schulz's work with special events at the bookstore.</p>
          <!-- <a href="#" class="btn btn-primary">View More</a> -->
        </div>
      </div>
    </div>

  </div>
</div>


