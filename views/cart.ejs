<%- include('header'); -%>
<%- include('navbar.ejs', username) %>

<style>
  .cart-container {
    background-color: #f8f9fa;
    border-radius: 10px;
    padding: 20px;
  }

  .cart-item-image {
    width: 80px;
    height: auto;
    border-radius: 5px;
  }

  .table {
    background: white;
    border-radius: 10px;
    overflow: hidden;
  }

  .table th {
    background: #783ca2;
    color: white;
    text-align: center;
  }

  .table td {
    vertical-align: middle;
    text-align: center;
  }

  .table-striped tbody tr:nth-of-type(odd) {
    background-color: #f3eefc;
  }

  .quantity-controls {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .quantity-controls button {
    background-color: #007bff;
    color: white;
    border: none;
    width: 30px;
    height: 30px;
    border-radius: 5px;
  }

  .quantity-controls span {
    margin: 0 10px;
    font-weight: bold;
  }

  .btn-remove {
    background-color: #dc3545;
    border: none;
    color: white;
    padding: 5px 10px;
    border-radius: 5px;
  }

  .btn-remove:hover {
    background-color: #c82333;
  }

  .total-price {
    font-size: 1.5rem;
    font-weight: bold;
    color: #783ca2;
  }

  .btn-checkout {
    background: linear-gradient(to right, #ff7e5f, #feb47b);
    border: none;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 1.2rem;
    transition: 0.3s;
  }

  .btn-checkout:hover {
    background: linear-gradient(to right, #feb47b, #ff7e5f);
  }
</style>

<div class="container my-5 col-md-10 cart-container">
  <h1 class="mb-4 text-center">ðŸ›’ Shopping Cart</h1>
  
  <% if (cartItems.length > 0) { %>
      <div class="table-responsive">
          <table class="table table-striped table-bordered">
              <thead>
                  <tr>
                      <th>Cover</th>
                      <th>Title</th>
                      <th>Quantity</th>
                      <th>Price</th>
                      <th>Total</th>
                      <th>Action</th>
                  </tr>
              </thead>
              <tbody>
                  <% let totalPrice = 0; %>
                  <% cartItems.forEach(function(item) { %>
                      <% totalPrice += item.quantity * item.price; %>
                      <tr>
                          <td>
                              <img src="<%= item.cover_image_url %>" class="cart-item-image" alt="<%= item.title %>">
                          </td>
                          <td><%= item.title %></td>
                          <td class="quantity-controls">
                            <form action="/cart/update/<%= item.cart_item_id %>" method="post" class="d-inline">
                                <input type="hidden" name="operation" value="decrease">
                                <button type="submit">-</button>
                            </form>
                            <span><%= item.quantity %></span>
                            <form action="/cart/update/<%= item.cart_item_id %>" method="post" class="d-inline">
                                <input type="hidden" name="operation" value="increase">
                                <button type="submit">+</button>
                            </form>
                          </td>
                          <td>$<%= item.price.toFixed(2) %></td>
                          <td>$<%= (item.quantity * item.price).toFixed(2) %></td>
                          <td>
                              <form action="/cart/remove/<%= item.cart_item_id %>" method="post" class="d-inline">
                                  <button type="submit" class="btn-remove">ðŸ—‘ Remove</button>
                              </form>
                          </td>
                      </tr>
                  <% }); %>
              </tbody>
          </table>
      </div>
      <div class="d-flex justify-content-end mt-3">
          <span class="total-price">Total: $<%= totalPrice.toFixed(2) %></span>
      </div>
      <div class="d-flex justify-content-end mt-3">
          <form action="/checkout/<%= cartItems[0].cart_id %>" method="post">
              <button class="btn-checkout" type="submit">Proceed to Checkout</button>
          </form>            
      </div>
  <% } else { %>
      <div class="text-center">
          <p class="text-muted">Your cart is empty.</p>
          <a href="/books" class="btn btn-primary">ðŸ“š Continue Shopping</a>
      </div>
  <% } %>
</div>

<%- include('footer'); -%>
